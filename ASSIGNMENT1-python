class Truck:
    fleetwaste = []
    def __init__(self, name, load, capacity):
        self.name = name
        self.load = load
        self.capacity = capacity
        self.waste = capacity - load
        Truck.fleetwaste.append(self.waste)
    def GetInfo(self):
        return "Name:", self.name, "Load: ", self.load, "Capacity:", self.capacity, "Waste:", self.waste
    def GetLoadCost(self):
        return 10 * self.load
    def SingleTruckWasteCost(self):
        return self.waste * 10
    def FleetWasteCost(Truck):
        return sum(Truck.fleetwaste) * 10


dumptruck = Truck("dump", 10, 50)
bigtruck = Truck("big", 40, 100)
widetruck = Truck("wide", 100, 150)
smalltruck = Truck("small", 5, 10)
hugetruck = Truck("huge", 200, 210)

fleetlist = [dumptruck, bigtruck, widetruck, smalltruck, hugetruck]

print(Truck.FleetWasteCost(Truck))
print(dumptruck.SingleTruckWasteCost())
print(fleetlist[0].GetInfo())
